<h2>Available drones</h2>
<div class="d-flex flex-wrap justify-content-center">
    {{#each drones}}
        <div class="card m-4" style="width: 18rem;">
        <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">Propellers: {{this.propellers}}</p>
                <p class="card-text">Max Speed: {{this.maxSpeed}}</p>
                <div class= "d-flex">
                <a href="/drones/{{id}}/edit" class="btn btn-primary m-2 d-inline">Edit</a>
                <form action="/drones/{{id}}/delete" method="POST"> 
                    <button class="btn btn-outline-danger m-2 d-inline">Delete</button>
                </form>
                </div>


            </div>
        </div>  
    {{/each}}
</div>